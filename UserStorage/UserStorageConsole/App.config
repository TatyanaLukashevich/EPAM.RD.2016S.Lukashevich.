<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section 
      name="ReplicationSection" 
      type="UserStorage.Config.ReplicationSection, UserStorage"/>
  </configSections>
  
  <appSettings>
    <!-- The path of xml file -->
    <add key="xmlPath" value="Users.xml"/>
    <!--<add key="SlavesCount" value="2" />-->
  </appSettings>
  
  <ReplicationSection>
    <Services>
      <add serviceType="Master" path="master" />
      <add serviceType="Slave" path="slave_1" />
      <add serviceType="Slave" path="slave_2" />
    </Services>
  </ReplicationSection>
  
  <system.diagnostics>
    <switches>
      <add name="Data" value="1" />
    </switches>
  </system.diagnostics>

</configuration>